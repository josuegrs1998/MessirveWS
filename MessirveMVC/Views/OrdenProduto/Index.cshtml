<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>
<div class="containerPrincipalCat">
    <div style="display:flex;">
    <div class="br-section-wrapper">

        <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

        <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
            <thead class="thead-colored thead-primary">
                <tr>
                   
                    <th>IdOrden</th>
                    <th>IdProducto</th>
                    <th>Precio</th>
                    <th>Iva</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    <div id="" class="" role="dialog">
        <div class="formaCrud">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 style="text-align:center">Nuevo</h3>
                </div>
                <div class="modal-body">
                    <form id="NewRecord" role="form">
                        <div>

                            <div class="form-group">

                                <input type="hidden" id="tIdOrdenProducto" class="form-control" placeholder="IdOrden" readonly />
                            </div>

                            <div class="form-group">
                                <label for="tidOrden" class="control-label">Id Orden</label>
                                <select name="select-choice-1" id="tidOrden" class="form-control">
                                    <option value="" selected disabled hidden>Elegir</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="tIdProducto" class="control-label">Producto</label>
                                <select name="select-choice-1" id="tIdProducto" class="form-control">
                                    <option value="" selected disabled hidden>Elegir</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="tPrecio" class="control-label">Precio</label>
                                <input type="text" id="tPrecio" class="form-control" placeholder="Precio" />
                            </div>

                            <div class="form-group">
                                <label for="tIva" class="control-label">Iva</label>
                                <input type="text" id="tIva" class="form-control" placeholder="Iva" />
                            </div>
                            <div class="form-group">
                                <label for="tsubtotal" class="control-label">Subtotal</label>
                                <input type="text" id="tsubtotal" class="form-control" placeholder="Subtotal" />
                            </div>
                            <div class="form-group">
                                <label for="tCantidad" class="control-label">Cantidad</label>
                                <input type="text" id="tCantidad" class="form-control" placeholder="Cantidad" />
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                          
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script src="~/Scripts/crud/OrdenProducto.js"></script>


