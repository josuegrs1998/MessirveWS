
@{
    ViewBag.Title = "Index";
}




<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>


<div class="containerPrincipalCat">

    <div style="display:flex;">
        <div >

            <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

            <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
                <thead class="thead-colored thead-primary">
                    <tr>
                        <th>IdProductoEmpresa</th>
                        <th>IdEmpresa</th>
                        <th>IdProducto</th>
                        <th>Cantidad</th>
                        <th>Descuento</th>
                        <th>PrecioBase</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>

        <div id="" class="" role="dialog">
            <div class="formaCrud" >
                <div class="modal-content">
                    <div >
                        <h3 style="text-align:center">Crear Empresas Producto</h3>
                    </div>
                    <div class="modal-body">
                        <form id="NewRecord" role="form">
                            <div>

                                <div class="form-group">

                                    <input type="hidden" id="txtIdProductoEmpresa" class="form-control" placeholder="IdProductoEmpresa" readonly />
                                </div>


                                <div class="form-group">
                                    <label for="txtIdEmpresa" class="control-label">Empresa</label>

                                    <select name="select-choice-1" id="txtIdEmpresa" class="form-control">
                                        <option value="" selected disabled hidden>Elegir</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="txtIdProducto" class="control-label">IdProducto</label>

                                    <select name="select-choice-1" id="txtIdProducto" class="form-control">
                                        <option value="" selected disabled hidden>Elegir</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="txtCantidad" class="control-label">Cantidad</label>
                                    <input type="text" id="txtCantidad" class="form-control" placeholder="Cantidad" />
                                </div>
                                <div class="form-group">
                                    <label for="txtDescuento" class="control-label">Descuento</label>
                                    <input type="text" id="txtDescuento" class="form-control" placeholder="Descuento" />
                                </div>

                                <div class="form-group">
                                    <label for="txtPrecioBase" class="control-label">PrecioBase</label>
                                    <input type="text" id="txtPrecioBase" class="form-control" placeholder="PrecioBase" />
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                                <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/crud/PEmpresa.js"></script>