
@{
    ViewBag.Title = "Index";
}

    <style>
        #dt-records tbody th, #dt-records tbody td {
            padding: 0.25rem !important;
            line-height: 1.3em !important;
            vertical-align: middle !important;
        }

        #btnnuevo {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </style>
<div class="containerPrincipal">


    <div style="display: flex; ">
        <div >

            <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

            <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
                <thead class="thead-colored thead-primary">
                    <tr>
                        <th>IdProducto</th>
                        <th>Nombre</th>
                        <th>Codigo</th>
                        <th>Descripcion</th>
                        <th>Activo</th>
                        <th>Exento</th>
                        <th>IdMarca</th>
                        <th>SubCategoria</th>
                        <th>Categoria</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
     
        <div id="" class="" role="dialog">
            <div class="formaCrud" >
                <div class="modal-content">
                    <div >
                        <h3 style="text-align:center">Crear Producto</h3>
                    </div>
                    <div class="modal-body" >
                        <form id="NewRecord" role="form">
                            <div>

                                <div class="form-group">
                                    <input type="hidden" id="txtIdProducto" class="form-control" placeholder="IdProducto" />
                                </div>

                                <div class="form-group">
                                    <label for="txtNombre" class="control-label">Nombre</label>
                                    <input type="text" id="txtNombre" class="form-control" placeholder="Nombre" />
                                </div>

                                <div class="form-group">
                                    <label for="txtCodigo" class="control-label">Codigo</label>
                                    <input type="text" id="txtCodigo" class="form-control" placeholder="Codigo" />
                                </div>

                                <div class="form-group">
                                    <label for="txtDecripcion" class="control-label">Descripcion</label>
                                    <input type="text" id="txtDecripcion" class="form-control" placeholder="Descripcion" />
                                </div>

                                <div class="form-group">
                                    <label for="txtActivo" class="control-label">Activo</label>
                                    <select name="activo" id="txtActivo" class="form-control">
                                        <option value="" selected disabled hidden>Elegir</option>
                                        <option value="true">Si</option>
                                        <option value="false">No</option>
                                    </select>

                                </div>

                                <div class="form-group">
                                    <label for="txtExento" class="control-label">Exento</label>
                                    <select name="exento" id="txtExento" class="form-control">
                                        <option value="" selected disabled hidden>Elegir</option>
                                        <option value="true">Si</option>
                                        <option value="false">No</option>
                                    </select>

                                </div>

                                <div class="form-group">
                                    <label for="txtIdMarca" class="control-label">Marca</label>
                                    <input type="text" id="txtIdMarca" class="form-control" placeholder="Marca" />
                                </div>
                                <div class="form-group">
                                    <label for="select-choice-1" class="select">SubCategoria</label>
                                    <select name="select-choice-1" id="txtIdSubCategoria" class="form-control">
                                        <option value="" selected disabled hidden>Elegir</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="select-choice-1" class="select">Categoria</label>
                                    <select name="select-choice-1" id="txtIdCategoria" class="form-control">
                                        <option value="" selected disabled hidden>Elegir</option>
                                    </select>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                               
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/crud/Producto.js"></script>
