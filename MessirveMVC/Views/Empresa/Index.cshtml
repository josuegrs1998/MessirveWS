
@{
    ViewBag.Title = "Index";
}


<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>
<div class="containerPrincipalCat">

    <div style="display: flex;">
    <div class="br-section-wrapper">

        <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

        <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
            <thead class="thead-colored thead-primary">
                <tr>
                    <th>IdEmpresa</th>
                    <th>Nombre</th>
                    <th>RUC</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Descripcion</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    <div id="" class="" role="dialog">
        <div class="formaCrud" >
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Nueva Empresa</h3>
                </div>
                <div class="modal-body">
                    <form id="NewRecord" role="form">
                        <div>

                            <div class="form-group">

                                <input type="hidden" id="txtIdEmpresa" class="form-control" placeholder="IdEmpresa" readonly />
                            </div>


                            <div class="form-group">
                                <label for="txtNombre" class="control-label">Nombre</label>
                                <input type="text" id="txtNombre" class="form-control" placeholder="Nombre" />
                            </div>
                            <div class="form-group">
                                <label for="txtRUC" class="control-label">RUC</label>
                                <input type="text" id="txtRUC" class="form-control" placeholder="RUC" />
                            </div>
                            <div class="form-group">
                                <label for="txtTelefono" class="control-label">Telefono</label>
                                <input type="text" id="txtTelefono" class="form-control" placeholder="Telefono" />
                            </div>
                            <div class="form-group">
                                <label for="txtCorreo" class="control-label">Correo</label>
                                <input type="text" id="txtCorreo" class="form-control" placeholder="Correo" />
                            </div>

                            <div class="form-group">
                                <label for="txtDescripcion" class="control-label">Descripcion</label>
                                <input type="text" id="txtDescripcion" class="form-control" placeholder="Descripcion" />
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                            <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
<script src="~/Scripts/crud/Empresa.js"></script>